
datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Order {
  id            Int     @id @default(autoincrement())
  name          String
  beef_burger   Boolean
  turkey_burger Boolean
  veggie_burger Boolean
  bacon         Boolean
  cheese        Boolean
  lettuce       Boolean
  tomato        Boolean
  onions        Boolean
  mushrooms     Boolean
  pickles       Boolean
  coleslaw      Boolean
  fries         Boolean
  ketchup       Boolean
  bbq           Boolean
  mayo          Boolean
  mustard       Boolean
  honey_mustard Boolean
  relish        Boolean
  status        Status
}

enum Status {
  IN_PROGRESS
  COMPLETE
}
